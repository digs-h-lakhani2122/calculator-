<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#7EC8E3">
    <EditText
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="left"
        android:textColor="@color/blue"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:inputType="textPersonName" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/b1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="C" />

            <Button
                android:id="@+id/b2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="%" />

            <Button
                android:id="@+id/b3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="(del)" />

            <Button
                android:id="@+id/b4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/b5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="1" />

            <Button
                android:id="@+id/b6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="2" />

            <Button
                android:id="@+id/b7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="3" />

            <Button
                android:id="@+id/b8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/b9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="4" />

            <Button
                android:id="@+id/b10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="5" />

            <Button
                android:id="@+id/b11"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="6" />

            <Button
                android:id="@+id/b12"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/b13"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="7" />

            <Button
                android:id="@+id/b14"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="8" />

            <Button
                android:id="@+id/b15"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="9" />

            <Button
                android:id="@+id/b16"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/b17"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="00" />

            <Button
                android:id="@+id/b18"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="0" />

            <Button
                android:id="@+id/b19"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="." />

            <Button
                android:id="@+id/b20"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:textColor="@color/white"
                android:text="=" />
        </TableRow>
    </TableLayout>


</LinearLayout>